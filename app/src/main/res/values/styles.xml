<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.TodoApp.button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TodoApp.Button</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Widget.TodoApp.button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TodoApp.Button</item>
        <item name="strokeColor">@color/todo_black_000</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.TodoApp.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/selector_checkbox_button_tint</item>
    </style>

    <style name="Widget.TodoApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevation0</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TodoApp.Card</item>
    </style>

    <style name="Widget.TodoApp.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">?android:colorBackground</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.TodoApp.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?colorOnBackground</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">?textAppearanceHeadline6</item>
    </style>

</resources>