<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Components -->
        <item name="materialButtonStyle">@style/Widget.TodoApp.button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.TodoApp.button.Outlined</item>

        <!-- Type system -->
        <item name="textAppearanceButton">@style/TextAppearance.TodoApp.Button</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TodoApp.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TodoApp.Body1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TodoApp.Caption</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TodoApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TodoApp.Subtitle2</item>

        <!-- Shape System -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TodoApp.SmallComponents</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TodoApp.MediumComponents</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TodoApp.LargeComponents</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/todo_green_2E7D32</item>
        <item name="colorOnPrimary">@color/todo_white_fff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/todo_white_fff</item>
        <item name="colorOnSecondary">@color/todo_green_2E7D32</item>

        <item name="android:colorBackground">@color/todo_gray_FBFBFB</item>
        <item name="colorOnBackground">@color/todo_black_000</item>
        <item name="colorSurface">@color/todo_white_fff</item>
        <item name="colorOnSurface">@color/todo_black_000</item>
        <item name="android:textColorPrimary">@color/todo_black_000</item>
        <item name="android:textColorSecondary">@color/todo_black_70</item>
        <item name="android:textColorTertiary">@color/todo_black_40</item>
        <item name="colorWarning">@color/todo_yellow</item>

        <!-- color control components -->
        <item name="colorControlNormal">@color/todo_gray_c7c7c7</item>
        <item name="colorControlActivated">@color/todo_green_2E7D32</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:navigationBarColor">@color/todo_white_fff</item>
        <!-- Components styles by default -->
        <item name="checkboxStyle">@style/Widget.TodoApp.Checkbox</item>
        <item name="materialCardViewStyle">@style/Widget.TodoApp.CardView</item>
        <item name="appBarLayoutStyle">@style/Widget.TodoApp.AppBar</item>
        <item name="toolbarStyle">@style/Widget.TodoApp.Toolbar</item>
        <item name="prefixTextViewStyle"></item>
    </style>

    <style name="ThemeOverlay.TodoApp.Green" parent="">
        <item name="android:colorBackground">@color/todo_green_2E7D32</item>
        <item name="colorOnBackground">@color/todo_white_fff</item>
        <item name="colorPrimary">@color/todo_white_fff</item>
        <item name="colorOnPrimary">@color/todo_green_2E7D32</item>
        <item name="colorWarning">#FF5722</item>
    </style>
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light" />
</resources>